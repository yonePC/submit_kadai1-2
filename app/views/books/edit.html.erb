<p id="notice">
  <% if flash[:notice] %>
  <%= flash[:notice] %>
  <% end %>
</p>


<h1>Editing Book</h1>

 <% if @book.errors.any? %>
  <div id = "error_explanation">
   <h2>
      <%= @book.errors.count %>errors prohibited this book from being saved:
   </h2>

   <ul>
     <li>
       <% @book.errors.full_messages.each do |message| %>
        <%= message %>
       <% end %>
     </li>
   </ul>
  </div>
 <% end %>




<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
 <label>Title</label>
  <div class="field"><%= f.text_field :title %></div>

 <label>Body</label>
  <div class="field"><%= f.text_area :body %></div>
  <div class="actions"><%= f.submit "Update Book" %></div>
<% end %>


